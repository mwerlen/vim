+function s:SwapOutterPlaceHoldersForMultiPartDelims(line)
+    let left = ''
+    let right = ''
+    if s:Multipart()
+        let left = b:left
+        let right = b:right
+    elseif s:AltMultipart()
+        let left = b:leftAlt
+        let right = b:rightAlt
+    endif
