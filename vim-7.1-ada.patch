+    1 int foo = 3;
+    2 int bar = 5;
+    3 /*while(foo < 50){                                 */
+    4   /*foo = foo + bar;                               */
+    5   /*printf("i am just making up this code\n");     */
+    6       /*printf("i have no idea what im writing\n");*/
+    7 /*}                                                */
+<
+If NERD_right_align_regexp doesnt cover c files then the code will become: >
+    1 int foo = 3;
+    2 int bar = 5;
+    3 /* while(foo < 50){ */
+    4   /* foo = foo + bar; */
+    5   /* printf("i am just making up this code\n"); */
+    6       /* printf("i have no idea what im writing\n"); */
+    7 /* } */
+<
